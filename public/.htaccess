<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # FORCE HTTPS + WWW (Strict 301 Redirect)
  # If host is NOT www.rcvideovision.in OR scheme is NOT https
  RewriteCond %{HTTP_HOST} !^www\.rcvideovision\.in$ [NC,OR]
  RewriteCond %{HTTPS} off
  # Redirect to https://www.rcvideovision.in/REQUEST_URI
  RewriteRule ^(.*)$ https://www.rcvideovision.in/$1 [R=301,L]

  # SPA Routing (Don't touch existing files/folders)
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
